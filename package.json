  "version":"0.0.2",
  "repository":{
    "type":"git",
    "url":"git://github.com/edwardhotchkiss/nitrix.git"
  },
  "keywords":["nitrix","process","forever","error","uncaught"],
  "main":"./lib/nitrix",
  "engines":{
    "node":">= 0.6.5 < 0.8.0"
  },
  "dependencies":{
    "commander":"0.5.0",
    "colors":"0.6.0"
  },
  "devDependencies":{
    "vows":"0.6.0"
  },
  "bin": { "nitrix" : "./bin/nitrix.js" },
  "licenses":[{
    "type":"MIT",
    "url":"http://github.com/edwardhotchkiss/nitrix/LICENSE"
  }],
  "preferGlobal" : "true",
  "scripts":{
    "test":"vows test/*.test.js --spec"
  }
